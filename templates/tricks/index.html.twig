{% extends 'base.html.twig' %}

{% block title %}Tricks index{% endblock %}

{% block body %}
    <h1>Tricks index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Image</th>
                <th>Video</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for trick in tricks %}
            <tr>
                <td>{{ trick.id }}</td>
                <td>{{ trick.nom }}</td>
                <td>{{ trick.description }}</td>
                <td>{{ trick.image }}</td>
                <td>{{ trick.video }}</td>
                <td>
                    <a href="{{ path('app_tricks_show', {'id': trick.id}) }}">show</a>
                    <a href="{{ path('app_tricks_edit', {'id': trick.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_tricks_new') }}">Create new</a>
{% endblock %}
