{% extends 'base.html.twig' %}

{% block title %}Tricks{% endblock %}

{% block body %}
    <h1>Tricks</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ trick.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ trick.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ trick.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset('uploads/brochures/' ~ trick.image) }}"
                        alt="Grapefruit slice atop a pile of other slices"></td>
            </tr>
            <tr>
                <th>Video</th>
                <td><iframe src="{{ trick.video }}" width="400" heigth="400" frameborder="0" allowfullscreen=""></iframe></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_tricks_index') }}">back to list</a>

    <a href="{{ path('app_tricks_edit', {'id': trick.id}) }}">edit</a>

    {{ include('tricks/_delete_form.html.twig') }}
{% endblock %}
